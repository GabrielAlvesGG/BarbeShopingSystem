	.figure svg.icon{ width:56px; height:56px; stroke:var(--brand); fill:none; stroke-width:1.8; border:1px solid var(--card-border); border-radius:.5rem; padding:.5rem; flex-shrink:0; background:rgba(201,162,39,.06) }
	.card h3{ margin:0 0 .25rem }
	.card p{ margin:0; color:var(--fg-muted) }
	.btn:focus-visible, a.btn:focus-visible{ outline:2px solid var(--brand); outline-offset:2px }

	/* Ajuste do container para melhor leitura em cards */
	.lp-container{ 
		max-width:1100px; 
		margin:0 auto; 
		padding:0 clamp(16px, 3vw, 28px);
	}

	/* Remover overrides antigos que conflitam com a nova grade:
	   - Apague o bloco ".benefits.grid{...} @@media(min-width)..."
	*/

	/* Responsividade global e correções de layout */
	/* 1) Grade 3 colunas com largura mínima (cards de benefícios) */
