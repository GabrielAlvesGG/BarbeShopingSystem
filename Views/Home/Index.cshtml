	.gallery img{ height: clamp(140px, 20vw, 220px); width:100%; object-fit:cover; border-radius:.5rem; border:1px solid var(--border)}

	/* 6) Horários com auto-fit (quebra em 2–3 colunas quando precisar) */
	.hours{ 
		display:grid; 
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); 
