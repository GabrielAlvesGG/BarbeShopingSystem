<style>
	:root{
		--bg-900:#0f1115; --bg-800:#161a22; --card:#1c222c;
		--text-100:#f7f8fa; --text-300:#e1e4ea; --text-500:#b7bdc9;
		--accent:#c9a227; /* dourado sofisticado */
		--accent-2:#e14d2a; /* toque enérgico */
		--muted:#8a92a6; --border:#2a3140;
	}
	html{scroll-behavior:smooth}
	body{color:var(--text-100); background:var(--bg-900)}
	/* Ajuste do container para melhor leitura em cards */
	.lp-container{ 
		max-width:1100px; 
		margin:0 auto; 
		padding:0 clamp(16px, 3vw, 28px);
	}

	.section{padding:4rem 0}
	.section--tight{padding:2.5rem 0}
	.grid{display:grid; gap:1.5rem}

	/* Grade responsiva estável para 3 colunas (com largura mínima) */
	.grid--3{ 
		display:grid;
		gap:clamp(12px,2vw,20px);
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	}
	.grid--2{
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	}
	/* Removido forçar .grid--3 = 1 coluna em telas menores */
	@@media (max-width: 992px){ .grid--2{grid-template-columns:1fr} }

	/* Hero / Carousel */
	.hero{position:relative}
	.hero .carousel-item { position: relative; }
	.hero .carousel-item img{ height: clamp(320px, 72vh, 780px); object-fit:cover;}
	.hero .overlay{
		position:absolute; inset:0;
		background:linear-gradient(180deg,rgba(15,17,21,.35),rgba(15,17,21,.75));
		pointer-events:none; /* não bloqueia cliques */
		z-index:1;
	}
	.hero .caption{
		position:absolute; inset:0; display:flex; align-items:center; justify-content:center; text-align:center; padding:0 1rem;
		z-index:2; /* conteúdo acima do overlay */
	}
	/* Garante que os controles fiquem acima da legenda/overlay e recebam clique */
	.carousel{ position: relative; }
	.carousel .carousel-control-prev,
	.carousel .carousel-control-next{
		z-index:5;
		pointer-events:auto;
	}

	.hero .caption .content{max-width:820px}
	.badge{display:inline-block; padding:.35rem .6rem; border:1px solid var(--accent); color:var(--accent); border-radius:999px; font-size:.85rem; letter-spacing:.3px; margin-bottom:.75rem}

	/* Cards / Features */
	.card{
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		border-radius: 16px;
		padding: clamp(16px, 2.2vw, 20px);
		display:flex; 
		overflow:hidden;
	}
	.card h3{
		color: var(--fg-strong);
		font-weight: 700;
		font-size: clamp(1rem, .95rem + .4vw, 1.125rem);
	}
	.card p{
		word-break: normal;
		overflow-wrap: break-word;
		hyphens: none;
		text-wrap: pretty;
		line-height: 1.5;
		letter-spacing: .1px;
	}
	.figure{ 
		display:flex; 
		align-items:flex-start; 
		gap: clamp(10px,1.5vw,14px);
	}
	.figure .text{ min-width:0; flex:1; overflow-wrap:break-word; }

	/* Títulos e descrições com boa legibilidade */
	.section h3{ 
		color: var(--fg-strong);
		font-weight: 700;
		font-size: clamp(1rem, .95rem + .4vw, 1.125rem);
	}
	.card h3, .card p{
		word-break: normal;
		overflow-wrap: break-word;
		hyphens: none;
		text-wrap: pretty;
		line-height: 1.5;
		letter-spacing: .1px;
	}

	/* Ícone responsivo e consistente (decorativo) */
	.icon{ 
		width: clamp(28px,3.2vw,36px); 
		height: clamp(28px,3.2vw,36px); 
		color: var(--brand);
		flex-shrink: 0;
	}
	.figure svg.icon{
		stroke: currentColor; 
		fill:none; 
		stroke-width:1.8;
		border:1px solid var(--card-border); 
		border-radius:.5rem; 
		padding:.5rem; 
		background:rgba(201,162,39,.06);
	}

	/* Galeria */
	.gallery{
		display:grid;
		gap:clamp(12px,2vw,20px);
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}
	.gallery img{ height: clamp(140px, 20vw, 220px); width:100%; object-fit:cover; border-radius:.5rem; border:1px solid var(--border)}
	@@media (max-width: 992px){ .gallery{grid-template-columns:repeat(2,1fr)} }
	@@media (max-width: 520px){ .gallery{grid-template-columns:1fr} .gallery img{height:200px} }

	/* Tabela preços */
	.pricing{width:100%; border-collapse:separate; border-spacing:0; background:var(--card); border:1px solid var(--border); border-radius:.75rem; overflow:hidden}
	.pricing caption{caption-side:top; text-align:left; padding:1rem 1.25rem; color:var(--text-500)}
	.pricing td, .pricing th{padding:1rem 1.25rem; border-bottom:1px solid var(--border)}
	.pricing tr:last-child td{border-bottom:none}
	.pricing td:last-child{text-align:right; color:var(--text-300)}

	/* Horários */
	.hours{ 
		display:grid; 
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); 
		gap:.75rem;
	}
	.hours .item{background:var(--card); border:1px solid var(--border); border-radius:.5rem; padding:.85rem; text-align:center}
	.hours .muted{color:var(--muted)}
	@@media (max-width: 992px){ .hours{grid-template-columns:repeat(3,1fr)} }
	@@media (max-width: 520px){ .hours{grid-template-columns:repeat(2,1fr)} }

	/* CTA / Buttons */
	.actions{display:flex; gap:.75rem; flex-wrap:wrap; justify-content:center}
	.btn{appearance:none; border:none; cursor:pointer; border-radius:.6rem; padding:.875rem 1.1rem; font-weight:600; transition:.2s transform ease, .2s background-color ease, .2s color ease; text-decoration:none; display:inline-flex; align-items:center; gap:.5rem}
	.btn:active{transform:scale(.98)}
	.btn-primary{background:var(--accent); color:#1a1a1a}
	.btn-primary:hover{filter:brightness(.95)}
	.btn-dark{background:#11161e; color:var(--text-300); border:1px solid var(--border)}
	.btn-dark:hover{background:#0c1118}
	.btn-ghost{background:transparent; color:var(--text-300); border:1px solid var(--border)}
	.btn-ghost:hover{border-color:var(--text-500)}
	.cta-band{background:linear-gradient(90deg, rgba(201,162,39,.12), rgba(17,22,30,.85)); border-top:1px solid var(--border); border-bottom:1px solid var(--border)}

	.small{font-size:.9rem; color:var(--muted)}

	/* Theming e utilitários para seção de conversão */
	:root{
		--bg: var(--bg-900);
		--fg: var(--text-100);
		--fg-muted: var(--text-500);
		--fg-strong: var(--text-300);
