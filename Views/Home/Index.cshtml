		--card-bg: var(--card);
		--card-border: var(--border);
	}
	.section .section-title{ color: var(--fg-strong); }
	.list-plain{ list-style:none; padding:0; margin:1rem 0 1.5rem; display:grid; gap:.5rem }
	.badges{ display:flex; flex-wrap:wrap; gap:.5rem; margin:.75rem 0 1rem }
	.badge--micro{ border:1px solid var(--card-border); color:var(--fg-strong); background:rgba(201,162,39,.08); border-radius:999px; padding:.25rem .5rem; font-size:.75rem }
	.metrics{ font-size:.9rem; color:var(--fg-muted); margin-top:.25rem }

	/* Cards e ícones */
	.card{ background:var(--card-bg); border:1px solid var(--card-border); border-radius:.75rem; padding:1.25rem; display:flex; overflow:hidden }
	.figure{ display:flex; gap:1rem; align-items:flex-start }
